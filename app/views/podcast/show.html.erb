<div id="podcast-episode">
  <section id="resources">
    <h1>Podcast</h1>

    <article>
      <%= link_to @episode.name, podcast_path(@episode) %>

      <audio controls>
        <source src="<%= @episode.audio_link %>" type="audio/mpeg">
        Your browser does not support the audio element.
      </audio>

      <%= @episode.description %>
      <% @episode.picks.each do |pick| %>
        <%= link_to pick.name, pick.link %><%= pick.author.first_name %>
      <% end %>
      <br>
      <br>

      <% @episode.guests.each do |guest| %>
        <%= guest.full_name %>
        <%= guest.job_title %>
        <%= guest.company %>
        <%= guest.bio %>
        <%= guest.twitter %>
        <%= guest.github %>
        <% guest.other_links.each do |link| %>
          <%= link_to "personal", link %>
        <% end %>
      <% end %>

      
    </article>
    <h3 class="page-nav-buttons">
      <%#= link_to 'Back to Stories', blogs_path %>
      <%#= link_to 'Edit', edit_blog_path(@blog_post) if admin? %>
    </h3>
  </section>
</div>